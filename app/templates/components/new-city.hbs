{{#if addNewCity}}
  <h1>New City</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="name">City Name</label>
          {{input value=name id="name"}}
        </div>

        <div class="form-group">
          <label for="attractions">Attractions</label>
          {{input value=attractions id="attractions"}}
        </div>

        <div class="form-group">
          <label for="country">Country</label>
          {{input value=country id="country"}}
        </div>

        <button {{action 'saveCity'}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'addCityForm'}}>New City</button>
{{/if}}
